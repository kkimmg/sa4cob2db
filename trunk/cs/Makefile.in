DESTDIR = 
CC = @CC@
ACM_HOME = @ACM_HOME@
LIBDIR = $(ACM_HOME)/lib
INSTALL = @INSTALL@
LN_S = @LN_S@
JAVA_HOME = @JAVA_HOME@
JDKLIB = -I$(JAVA_HOME)/include/
JDKOSLIB = -I$(JAVA_HOME)/include/linux/
JVMLINK = -L$(JAVA_HOME)/jre/lib/i386/server

all:
	$(CC)                                        -Wall -shared -v acmclient.c                -o libACMClient.so
	$(CC) $(JDKLIB) $(JDKOSLIB) $(JVMLINK) -ljvm -Wall -shared -v jniclient.c getJNIOption.c -o libJNIClient.so

install:
	mkdir $(LIBDIR)
	$(INSTALL) libACMClient.so $(LIBDIR)/
	$(INSTALL) libJNIClient.so $(LIBDIR)/

deinstall:
	rm $(LIBDIR)/libACMClient.so
	rm $(LIBDIR)/libJNIClient.so
	rm -rv $(LIBDIR)

clean:
	rm libACMClient.so
	rm libJNIClient.so
	

