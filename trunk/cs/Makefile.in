DESTDIR = 
CC = @CC@
ACM_HOME = @ACM_HOME@
LIBDIR = $(ACM_HOME)/lib
INSTALL = @INSTALL@
LN_S = @LN_S@
JAVA_HOME = @JAVA_HOME@
JDKLIB = -I$(JAVA_HOME)/include/
JDKOSLIB = -I$(JAVA_HOME)/include/linux/
JVMLINK = -L$(JAVA_HOME)/jre/lib/i386/server

all:
	$(CC)                                        -Wall -shared -v acmclient.c                -o acmclient.so
	$(CC) $(JDKLIB) $(JDKOSLIB) $(JVMLINK) -ljvm -Wall -shared -v jniclient.c getJNIOption.c -o jniclient.so

install:
	mkdir $(LIBDIR)
	$(INSTALL) acmclient.so $(LIBDIR)/
	$(INSTALL) jniclient.so $(LIBDIR)/
	$(LN_S) $(LIBDIR)/acmclient.so $(LIBDIR)/initializeSessionEnv.so
	$(LN_S) $(LIBDIR)/jniclient.so $(LIBDIR)/initializeJNISessionEnv.so

deinstall:
	rm $(LIBDIR)/acmclient.so
	rm $(LIBDIR)/jniclient.so
	rm $(LIBDIR)/initializeSessionEnv.so
	rm $(LIBDIR)/initializeJNISessionEnv.so
	rm -rv $(LIBDIR)

clean:
	rm acmclient.so
	rm jniclient.so
	

